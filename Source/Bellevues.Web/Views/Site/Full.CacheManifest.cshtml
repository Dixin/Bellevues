@{
    this.Layout = null;
    this.Response.ContentType = "text/cache-manifest";
    Func<string, IEnumerable<string>> getFiles = folder =>
        Directory.EnumerateFiles(this.Context.Server.MapPath(folder))
            .Select(Path.GetFileName)
            .Select(file => Path.Combine(folder, file))
            .Select(file => this.Href(file));
}CACHE MANIFEST

# Explicitly cached.
